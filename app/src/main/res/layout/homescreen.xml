<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33414E">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Unit"
        android:textColor="#D5FAFD"
        android:textSize="24sp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="43dp"

        />



    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:padding="20dp">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/weight"/>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/weight"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"
                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/volume"/>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/volum_calc"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textAllCaps="false"
                android:focusable="true"
                android:text="Volume"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/length"/>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/length_calc"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Length"
                android:textSize="10sp"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/area"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/storage"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storage"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/pressure"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="speedIcon"
                    android:src="@drawable/speed"/>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/speed"
                android:clickable="true"
                android:focusable="true"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/temp"/>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/temp_calc"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="76dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/time"/>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/time_calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textAllCaps="false"
                android:clickable="true"
                android:focusable="true"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>




    </GridLayout>





</LinearLayout>