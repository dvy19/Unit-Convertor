<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33414E">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_heading"
        android:textColor="#D5FAFD"
        android:textSize="24sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="43dp"

        />



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:padding="20dp">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:contentDescription="@string/weight"
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/weight"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/weight"
                android:layout_width="77dp"
                android:layout_height="48dp"
                android:text="@string/weight"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"
                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:contentDescription="@string/volume"
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/volume"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/volume_calc"
                android:layout_width="75dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:textAllCaps="false"
                android:focusable="true"
                android:text="@string/volume"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:contentDescription="@string/length"
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/length"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/length_calc"
                android:layout_width="76dp"
                android:layout_height="48dp"
                android:text="@string/length"
                android:textSize="20sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:contentDescription="@string/area"
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/area"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/area_calc"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/area"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"


            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:contentDescription="@string/speed"
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/storage"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/storage_calc"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/storage"
                android:textSize="20sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:contentDescription="@string/pressure"
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/pressure"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/pressure"
                android:textSize="20sp"
                android:id="@+id/pressure_calc"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/speed"
                    android:src="@drawable/speed"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/speed"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="57dp"
                android:layout_height="48dp"
                android:text="@string/speed"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"

                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:contentDescription="@string/temp"
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/temp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/temp_calc"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="76dp"
                android:textAllCaps="false"
                android:layout_height="48dp"
                android:text="@string/temp"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_height="87dp"
                android:layout_width="87dp"
                app:cardCornerRadius="11dp"


                app:cardBackgroundColor="#667391"
                >

                <ImageView
                    android:contentDescription="@string/time"
                    android:layout_width="61dp"
                    android:layout_gravity="center"
                    android:layout_height="59dp"
                    android:src="@drawable/time"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/time_calc"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="54dp"
                android:layout_height="48dp"
                android:text="@string/time"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>




    </GridLayout>





</LinearLayout>